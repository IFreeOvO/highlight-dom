{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "target": "es2015",
        "lib": ["esnext", "DOM"],
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "noEmit": true,
        "incremental": true,

        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true
    },
    "include": ["src/**/*"]
}
